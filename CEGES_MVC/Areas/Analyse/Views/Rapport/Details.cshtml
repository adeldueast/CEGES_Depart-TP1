@using CEGES_Models
@model CEGES_Models.Entreprise
@{
    ViewData["Title"] = "Janvier 2022";
}

<h3>
    Janvier 2022
    <small class="text-muted">(Entreprise exemple)</small>
</h3>

<div class="row pb-3 backgroundWhite">
    <div class="col-4 col-sm-12">
        <a asp-action="Update" class="btn btn-secondary col-10">
            <i class="fas fa-plus-circle"></i> &nbsp;Modifier les mesures
        </a>
    </div>
</div>

<form asp-action="Upsert" method="post" enctype="multipart/form-data">

    @foreach (var group in Model.Groupes)
    {
        <div class="list-group list-group-flush">
            <div class="list-group-item active mt-3">
                @group.Nom
            </div>

            @*header*@
            <div class="list-group-item">
                <div class="row">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                Nom de l'équipement
                            </div>
                            <div class="col-6">
                                Type de l'équipement
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                Formule
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        Mesure
                    </div>
                    <div class="col-3">
                        Émissions mensuelles
                    </div>
                </div>
            </div>
            
            @foreach (var equipement in group.Equipements)
            {
                @equipement.Rapports.First(x=>x.id)

                <div class="list-group-item">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-6 font-weight-bold">
                                    @equipement.Nom
                                </div>
                                <div class="col-6">
                                    @equipement.Type
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    @*10 t/j × 31 j*@
                                      @*10 t/j (calcul i think??)*@
                                    @switch (equipement)
                                    {
                                        case EquipementConstant c:
                                            @Html.DisplayFor(m=>c.Quantite) @Html.Raw(" t / j x 30 j")
                                            break;
                                        case EquipementLineaire l:
                                            @*TODO: A REVOIR*@
                                            @Html.Raw($"{l.FacteurConversion} t / {l.UniteMesure} x {l} {l.UniteMesure}")

                                            break;
                                        case EquipementRelatif r:
                                            @*0 % de[1, 57 à 12, 8] t / j × 31 j*@

                                            @Html.Raw($"0% de [{r.IntensiteZero} à {r.IntensiteZero}] t / j x 30 j")

                                            break;
                                        default:
                                            break;
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                             1476&nbsp;pizza
                        </div>
                        <div class="col-3">
                            @equipement.CalculateMensuel(3);
                        </div>
                    </div>
                </div>
            }
         
         
        </div>
        <div class="list-group-item pb-3 font-weight-bold">
            Émissions du groupe : 322 tonnes
        </div>
    }




    <div class="list-group-item active mt-3">
        Total des émissions pour Entreprise exemple
    </div>
    <div class="list-group-item pb-3 font-weight-bold">
        Émissions totales : 322 tonnes
    </div>

    <div class="form-group row mt-3">
        <div class="col-4">
            <a asp-action="Liste" class="btn btn-secondary w-100"><i class="fas fa-sign-out-alt"></i> Retour à Entreprise exemple</a>
        </div>
    </div>
</form>