@using CEGES_MVC.ViewModels.EntrepriseVMs
@using CEGES_MVC.ViewModels.EquipementVMs
@using CEGES_Util
@model EntrepriseInsertPeriod
@{
    ViewData["Title"] = "Février 2022";
    var date = DateTime.Parse(Context.Request.Query["RapportDebut"]);
}

<h3>
    @*date.Item1.ToMonthName().CapitalizeFirst()} {date.Item1.Year}*@
    @($"{date.ToMonthName().CapitalizeFirst()} {date.Year}")

    <small class="text-muted">(@Model.Nom)</small>
</h3>

<form asp-action="Upsert" method="post" enctype="multipart/form-data">

    @foreach (var groupe in Model.Groupes)
    {
        <div class="list-group list-group-flush">
            <div class="list-group-item active mt-3">
                @groupe.Nom
            </div>
            <div class="list-group-item">
                <div class="row">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                Nom de l'équipement
                            </div>
                            <div class="col-6">
                                Type de l'équipement
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                Formule
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        Mesure
                    </div>
                    <div class="col-3">
                        Émissions mensuelles
                    </div>
                </div>
            </div>
            @foreach (var equipement in groupe.Equipements)
            {
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-6 font-weight-bold">
                                    @equipement.Nom
                                </div>
                                <div class="col-6">
                                    @equipement.Type
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    @*10 t/j (calcul i think??)*@
                                    @switch (equipement)
                                    {
                                        case EquipementConstantVM c:
                                            @Html.DisplayFor(m=>c.Quantite) @Html.Raw(" t / j x 30 j")
                                            break;
                                        case EquipementLineaireVM l:
                                            @*TODO: A REVOIR*@
                                            @Html.Raw($"{l.FacteurConversion} t / {l.UniteMesure} x 0 {l.UniteMesure}")

                                            break;
                                        case EquipementRelatifVM r:
                                            @*0 % de[1, 57 à 12, 8] t / j × 31 j*@

                                            @Html.Raw($"0% de [{r.IntensiteZero} à {r.IntensiteZero}] t / j x 30 j")

                                            break;
                                        default:
                                            break;
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            @switch (equipement)
                            {
                                case EquipementConstantVM c:
                                    Html.Raw("&nbsp;");
                                    break;
                                case EquipementLineaireVM l:
                                    <input asp-for="@l.Mesure" type="text" />
                                    @Html.DisplayFor(m=>l.UniteMesure)
                                    break;
                                case EquipementRelatifVM r:
                                    <input asp-for="@r.Mesure" type="text" />
                                    @Html.Raw("%")
                                    break;
                                default:
                                    break;
                            }

                        </div>
                        <div class="col-3">&nbsp;</div>
                    </div>
                </div>
            }

        </div>
    }


    <div class="form-group row mt-3">
        <div class="col-4 offset-4">
            @if (Model.Id != 0)
            {
                //update
                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="Enregistrer" />
                </div>
            }
            else
            {
                //create
                <div class="col">
                    <input type="submit" class="btn btn-primary w-100" value="Ajouter le rapport" />
                </div>
            }
        </div>
        <div class="col-4">
            <a asp-action="Liste" class="btn btn-secondary w-100"><i class="fas fa-sign-out-alt"></i> Retour à Entreprise exemple</a>
        </div>
    </div>
</form>