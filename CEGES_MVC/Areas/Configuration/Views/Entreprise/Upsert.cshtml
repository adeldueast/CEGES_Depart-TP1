@using CEGES_MVC.ViewModels.EntrepriseVM
@model EntrepriseUpsertVM

@if (Model.Id == 0)
{
    ViewData["Title"] = "Ajouter une entreprise";
}
else
{
    ViewData["Title"] = "Modifier une entreprise";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.Id != 0)
    {
        <input asp-for="Id" hidden />
    }
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@ViewData["Title"]</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">


                    <div class="col-4">
                        <label>Nom</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Nom"/>
                    </div>


                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        @if (Model.Id != 0)
                        {
                           //update
                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Enregistrer" />
                            </div>
                            <div class="col">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary w-100"><i class="fas fa-sign-out-alt"></i> Retour</a>
                            </div>
                        }
                        else
                        {
                            //create
                            <div class="col">
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Ajouter" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-secondary w-100"><i class="fas fa-sign-out-alt"></i> Retour</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
